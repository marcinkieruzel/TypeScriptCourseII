{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "es6", "esnext"],
    "module": "commonjs",
    "types": ["node", "jest"],
    "resolveJsonModule": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true, 
    "strict": true,                                      
  },
  "exclude": ["./node_modules/**/*", "./build/**/*"],
  "include": ["./src/**/*", "./tests/**/*"]
}
